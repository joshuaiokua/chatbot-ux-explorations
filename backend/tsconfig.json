{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true, // Required for Deno
    "allowImportingTsExtensions": true // Required for Deno
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    ".deno",
    "deno.lock",
    "dist"
  ]
}